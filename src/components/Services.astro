---
interface Props {
	fetchURL?: string;
}
const {fetchURL = ''} = Astro.props;
const services = await fetch(fetchURL).then((response) => response.json());
import { Icon } from 'astro-icon';
---
{services.length ? (
    <section class="py-14 sm:py-20 section" id="services">
    <div class="container">
        <h2 class="text-xl sm:text-4xl font-medium mb-8 sm:mb-14">Услуги ДЦ</h2>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-5">
            
        {services.map((service: any) => (
            service.url ? (
            <a href={service.url} title="Новые автомобили" class="rounded-lg bg-gray-100 p-1 sm:p-3 flex items-center flex-nowrap gap-1 sm:gap-2 shadow-lg">
                <Icon name={service.icon} class="w-10" />
                <span class="block text-xs sm:text-lg 2xl:text-xl">{service.title}</span>
            </a>
            ) : (
            <div class="rounded-lg bg-gray-100 p-1 sm:p-3 flex items-center flex-nowrap gap-1 sm:gap-2 shadow-lg">
                <Icon name={service.icon} class="w-10" />
                <span class="block text-xs sm:text-lg 2xl:text-xl">{service.title}</span>
            </div>
            )
        ))}
        
        </div>
    </div>
</section>
) : ('')}